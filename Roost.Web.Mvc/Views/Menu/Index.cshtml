@model Roost.Web.Mvc.Models.MenuModel

@{
    ViewData["Title"] = "Menu";
}

@foreach (var category in Model.Sections)
{
    <div class="menu-category row">
        <div class="menu-category-title">@category.Category</div>
        <div class="row">
            @foreach (var item in category.Items)
            {
                <vc:menu-item item="@item"></vc:menu-item>
            }
        </div>
    </div>
}